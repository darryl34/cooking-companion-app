<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealDetailActivity">

    <include
        layout="@layout/toolbar_meal_detail"
        android:id="@+id/mealDetail_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailPage_mealTitle"
        android:layout_below="@id/mealDetail_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailPage_mealDate"
        android:layout_below="@id/detailPage_mealTitle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailPage_mealDate"
        android:id="@+id/detailPage_layout"
        android:orientation="vertical">

    </LinearLayout>


</RelativeLayout>