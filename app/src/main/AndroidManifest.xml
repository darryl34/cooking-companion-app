        android:supportsRtl="true"
        android:theme="@style/Theme.CookingCompanion">
        <activity
            android:name=".CalendarViewActivity"
            android:exported="true" />
        <activity
            android:name=".AddDishesActivity"
            android:exported="true" />
        <activity
            android:name=".CreateMealActivity"
